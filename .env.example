# ZeroGPT API Configuration
ZEROGPT_API_KEY=your_api_key_here
ZEROGPT_BASE_URL=https://api.zerogpt.com

# Application Configuration
NEXT_PUBLIC_APP_NAME="AI Content Detector"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
# Domain validation: Protects your API key by ensuring requests come from your domain
# Development: false (allows all origins for testing)
# Production: true (only allows requests from your domain)
DOMAIN_VALIDATION_ENABLED=false

# Allowed domains (comma-separated)
# Development: localhost:3000
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_DOMAINS=localhost:3000

# Your VPS Server IP (for reference - this is where your Next.js app runs)
# This IP is what ZeroGPT will see when you call their API
SERVER_IP=138.197.80.103

# Feature Flags
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false
NEXT_PUBLIC_ENABLE_PDF_EXPORT=false

# Rate Limiting (requests per minute)
RATE_LIMIT_DETECT=10
RATE_LIMIT_PLAGIARISM=5

# Caching (seconds)
CACHE_TTL_SECONDS=86400

# Limits
MAX_TEXT_CHARS=50000
MIN_PLAGIARISM_WORDS=300
MAX_FILE_SIZE_MB=2
