# ZeroGPT API Configuration
ZEROGPT_API_KEY=your_api_key_here
ZEROGPT_BASE_URL=https://api.zerogpt.com

# Application Configuration
NEXT_PUBLIC_APP_NAME="AI Content Detector"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false
NEXT_PUBLIC_ENABLE_PDF_EXPORT=false

# Rate Limiting (requests per minute)
RATE_LIMIT_DETECT=10
RATE_LIMIT_PLAGIARISM=5

# Caching (seconds)
CACHE_TTL_SECONDS=86400

# Limits
MAX_TEXT_CHARS=50000
MIN_PLAGIARISM_WORDS=300
MAX_FILE_SIZE_MB=2
