# AI Content Detector - Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# ZeroGPT API Configuration
ZEROGPT_API_KEY=your_zerogpt_api_key_here
ZEROGPT_BASE_URL=https://api.zerogpt.com

# IP Whitelist Configuration (set to false for local development)
IP_WHITELIST_ENABLED=false
WHITELISTED_IPS=your_production_server_ip

# Application Configuration
MAX_TEXT_CHARS=50000
MIN_PLAGIARISM_WORDS=300

# Next.js Configuration
NEXT_PUBLIC_APP_NAME="AI Content Detector"
NEXT_PUBLIC_APP_URL=http://localhost:3000
