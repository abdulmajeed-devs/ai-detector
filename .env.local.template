# AI Content Detector - Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# ZeroGPT API Configuration
ZEROGPT_API_KEY=your_zerogpt_api_key_here
ZEROGPT_BASE_URL=https://api.zerogpt.com

# Security Configuration
# Domain validation: Ensures requests come from your application domain (not from external sources)
# Set to 'false' for local development, 'true' for production
DOMAIN_VALIDATION_ENABLED=false

# Allowed domains (comma-separated) - requests must come from these domains
# Development: localhost:3000
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_DOMAINS=localhost:3000

# Your VPS Server IP (for reference and ZeroGPT IP whitelisting)
SERVER_IP=138.197.80.103

# Application Configuration
MAX_TEXT_CHARS=50000
MIN_PLAGIARISM_WORDS=300

# Next.js Configuration
NEXT_PUBLIC_APP_NAME="AI Content Detector"
NEXT_PUBLIC_APP_URL=http://localhost:3000
