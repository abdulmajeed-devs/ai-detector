# AI Content Detector - Production Environment Variables
# Copy this file to .env.production on your VPS server and fill in your actual values

# ZeroGPT API Configuration
ZEROGPT_API_KEY=your_actual_zerogpt_api_key_here
ZEROGPT_BASE_URL=https://api.zerogpt.com

# Security Configuration - IMPORTANT FOR PRODUCTION!
# Enable domain validation to protect your API key
DOMAIN_VALIDATION_ENABLED=true

# Your production domain(s) - comma-separated
# Example: yourdomain.com,www.yourdomain.com
ALLOWED_DOMAINS=yourdomain.com,www.yourdomain.com

# Your VPS Server IP - This is where your Next.js app runs
# ZeroGPT will see all API calls coming from this IP
SERVER_IP=138.197.80.103

# Application Configuration
NEXT_PUBLIC_APP_NAME="AI Content Detector"
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Rate Limiting (requests per minute)
RATE_LIMIT_DETECT=10
RATE_LIMIT_PLAGIARISM=5

# Caching (seconds)
CACHE_TTL_SECONDS=86400

# Limits
MAX_TEXT_CHARS=50000
MIN_PLAGIARISM_WORDS=300

# Node Environment
NODE_ENV=production
